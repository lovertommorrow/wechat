.eventDetailContain{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  position: relative;
  background: #EFEFF4;
  /* position: relative; */
}
.eventDetail{
  background:#fff;
  padding-top: 30rpx;
  padding-left: 28rpx;
  padding-bottom: 30rpx;
}
.eventDetailTop{
  margin-bottom: 30rpx;
}
.eventType{
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}
.eventStatus{
  display: inline-block;
  width: 230rpx;
  height: 40rpx;
  background: #FFEBE9;
  border-radius: 4px;
  margin-left: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  text-align: center;
  line-height: 40rpx;
  color: #FF4128;
}
.eventDetailDesc{
  font-size: 28rpx;
  font-weight: 400;
  line-height: 54rpx;
  color: #666666;
}
.eventProcess{
  margin-top: 35rpx;
  width: 100%;
  padding-top: 25rpx;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  background: #fff;
}
.eventProcessTitle{
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.eventTitleType{
  margin-left: 10rpx;
  color: #437FBA;
}
.timeLineContain{
  width: 100%;
  padding-top: 20rpx;
  max-height: 380rpx;
}
.timeStepContain{
  display: flex;
  
}
.timeLine,.timeRedLine{
  width: 72rpx;
  border-right: 1px solid #ccc;
  position: relative;
  padding-bottom: 30rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}
.timeRedLine::after{
  content: '';
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: #FF4128;
  box-shadow: #FF4128 0px 0px 1px 1px;
  border-radius: 50%;
  left: calc(100% - 7rpx);
  top: 40rpx;
}
.timeLine::after{
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background: #08b2d6;
  border-radius: 50%;
  left: calc(100% - 5rpx);
  top: 40rpx;
}
.handleTime{
  margin: 10rpx 0;
}
.timeMsg{
  width: 530rpx;
  position: relative;
  margin-left: 30rpx;  
  margin-top: 26rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
}
.top20{
  margin-top: 40rpx;
}
.preHandle{
  position:absolute; 
  top: -40rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}
.sysMsg{
  color: #437FBA;
  margin-right:6rpx;
}
.eventDetailFooter{
  width: 100%;
  height: 140rpx;
  border-top: 1px solid #ccc;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}
.btn{
  width: 210rpx !important;
  height: 64rpx !important;
  background: #FFFFFF;
  line-height: 64rpx !important;
  border: 1px solid #707070 !important;
  border-radius: 8rpx;
  font-size: 28rpx !important;
  padding: 0;
  font-weight: 400;
  color: #333;
}
