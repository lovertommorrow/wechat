.eventItemContain{
  width: 100%;
}
.listItem{
  width: 100%;
  height: 210rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1) inset;
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.itemTop{
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  
}
.itemType{  
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}
.itemType image{
  display: inline-block;
  width: 28rpx;
  height: 26rpx;
  margin-left: 10rpx;
  vertical-align: baseline;
}
.itemStatus{
  font-size: 28rpx;
  font-weight: 400;
  color: #437FBA;
  vertical-align: middle;
}
.itemText{
  width: 690rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}